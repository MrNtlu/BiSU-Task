<resources>
    <!-- Base application theme. -->
    <style name="Theme.BisuDevChallange" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/toolbarBackgroundColor</item>

        <item name="titleTextColor">@color/black</item>

        <item name="mainBackgroundColor">@color/white</item>
        <item name="mainTextColor">@color/black</item>
        <item name="subTextColor">@color/materialBlack</item>

        <item name="accessoryTextColor">@color/materialBlack</item>
        <item name="progressColor">@color/materialBlack</item>

        <item name="toolbarBackgroundColor">?attr/colorPrimary</item>
        <item name="bottomNavBackgroundColor">?attr/colorPrimary</item>
        <item name="bottomNavSelectedColor">@color/white</item>
        <item name="bottomNavUnselectedColor">@color/purple_200</item>
    </style>

    <style name="Theme.BisuDevChallange.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/purple_500</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>
</resources>